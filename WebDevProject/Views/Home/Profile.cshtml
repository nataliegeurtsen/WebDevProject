            <img class="person-logo" src="~/resources/images/Aimi.jpg">
            <img class="person-logo" src="~/resources/images/AuroraBorealis1.jpg">
            <img class="person-logo" src="~/resources/images/AuroraBorealis2.jpg">
            <img class="person-logo" src="~/resources/images/Iceblocks.jpg">
            <div>
                <button class="slideshow-button-left" onclick="plusDivs(-1)">&#10094;</button>
                <button class="slideshow-button-right" onclick="plusDivs(+1)">&#10095;</button>
            </div>
            <script>
                var slideIndex = 1;
                showDivs(slideIndex);

                function plusDivs(n) {
                    showDivs(slideIndex += n);
                }

                function showDivs(n) {
                    var i;
                    var x = document.getElementsByClassName("person-logo");
                    if (n > x.length) { slideIndex = 1 }
                    if (n < 1) { slideIndex = x.length };
                    for (i = 0; i < x.length; i++) {
                        x[i].style.display = "none";
                    }
                    x[slideIndex - 1].style.display = "block";
                }</script>
        </div>
