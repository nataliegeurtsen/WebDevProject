<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - WebDevProject</title>
    <link rel="icon" type="image/x-icon" href="/resources/assets/Asset 3.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body>
    <div class="background"></div>
    <img class="blob-image blob-image-1" alt="Blob Image" src="/resources/assets/Asset 1.png">
    <img class="blob-image blob-image-2" alt="Blob Image" src="/resources/assets/Asset 2.png">
    <img class="blob-image blob-image-3" alt="Blob Image" src="/resources/assets/Asset 3.png">
    <img class="blob-image blob-image-4" alt="Blob Image" src="/resources/assets/Asset 4.png">
    <img class="blob-image blob-image-5" alt="Blob Image" src="/resources/assets/Asset 5.png">
    <img class="blob-image blob-image-6" alt="Blob Image" src="/resources/assets/Asset 1.png">
    <img class="blob-image blob-image-7" alt="Blob Image" src="/resources/assets/Asset 4.png">

    <partial name="_Gdpr"/>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-end">
                    <ul class="navbar-nav flex-grow-1" style="justify-content:end;">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                    </ul>
                    <a asp-area="" asp-controller="Home" asp-action="Index" style="margin-inline: 3%">
                        <img src="/resources/logos/icon.svg" alt="NG" style="width:100px;" />
                    </a>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">ChatPH</a>
                        </li>
                        @*<li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="SignIn">Sign In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2023 - Natalie Geurtsen - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
