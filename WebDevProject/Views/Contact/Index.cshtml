@model Person
@{
    ViewData["Title"] = "Index";
}
<h1>@ViewData["Title"]</h1>

<p>Contactpage.</p>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Contactpagina</title>
    <link rel="stylesheet" href="stylesheets/contact.css">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
</head>

<body>

    <div class="page">
        <section class="contact">

            <h1>Contact</h1>

            <form action="" method="post" class="form-contactpagina">

                <div class="form-contactpagina__inputelement fx-col">
                    <label for="name">First name: </label>
                    <input type="text" name="firstname" id="firstname" required>
                </div>
                
                <div class="form-contactpagina__inputelement fx-col">
                    <label for="name">Last name: </label>
                    <input type="text" name="lastname" id="lastname" required>
                </div>
                
                <div class="form-contactpagina__inputelement fx-col">
                    <label for="name">Date of birth: </label>
                    <input type="date" name="dateofbirth" id="dateofbirth" required>
                </div>

                <div class="form-contactpagina__inputelement fx-col">
                    <label for="email">Email: </label>
                    <input type="email" name="email" id="email">
                </div>

                <div class="form-contactpagina__inputelement">
                    <fieldset>
                        <legend>Wil je onze nieuwsbrief ontvangen?</legend>
                        <label><input type="radio" name="newsletter" value="yes" checked /> Ja, graag!</label>
                        <label><input type="radio" name="newsletter" value="no" /> Nee, een andere keer</label>
                    </fieldset>
                </div>

                <div class="form-contactpagina__inputelement fx-col">
                    <label for="call-date">Op welke dag kunnen we bellen? </label>
                    <input name="call-date" type="date" id="call-date">
                </div>

                <div class="form-contactpagina__inputelement">
                    <input type="submit" value="Verstuur!">
                </div>

                /*student uitwerking*/


            </form>
            
            @section Scripts{
                @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }

        </section>
    </div>

</body>
</html>
